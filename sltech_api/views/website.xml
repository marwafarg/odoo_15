<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="websitesss_form_view_inherited">
            <field name="name">website.inherited</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group string="Mobile Data">
                        <field name="top_banner_ids"
                               class="o_website_sale_image_list"
                               context="{'default_name': name}" mode="kanban"
                               options="{'create_text':'Add Banners'}"/>
                        <field name="first_cat_ids"
                               widget="many2many_tags"/>
                        <field name="special_for_you_ids"
                               class="o_website_sale_image_list"
                               context="{'default_name': name}" mode="kanban"
                               options="{'create_text':'Add Banners'}"/>
                        <field name="cat_ids"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="minimum_order_price"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
