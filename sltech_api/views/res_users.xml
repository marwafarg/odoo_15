<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record model="ir.ui.view" id="res_users_form_view_inherited">
            <field name="name">res.users.inherited</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position='after'>
                    <notebook string="Ecommerce">
                        <page string="Ecommerce" name="ecommerce">
                            <form string="Ecommerce">
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="isProductReview"/>
                                        </group>
                                        <group>
                                            <field name="refer_code"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="isFirstOrder"/>
                                        </group>
                                        <group>
                                            <field name="refer_by"/>
                                            <field name="device_token"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>